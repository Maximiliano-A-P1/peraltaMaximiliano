agregacion de un script para crear todos los datos:


CREATE TABLE usuarios (
    id_usuario INT(11) AUTO_INCREMENT PRIMARY KEY,
    username VARCHAR(255) NOT NULL,
    password VARCHAR(255) NOT NULL,
    admin BOOLEAN NOT NULL DEFAULT 0,
    permiso VARCHAR(255) NOT NULL DEFAULT 'no'
);

CREATE TABLE productos (
    id_producto INT(11) AUTO_INCREMENT PRIMARY KEY,
    nombre_producto VARCHAR(255) NOT NULL,
    precio_producto DECIMAL(10,2) NOT NULL,
    cantidad_producto INT(11) NOT NULL,
    en_venta VARCHAR(50) NOT NULL,
    url_imagen VARCHAR(255) NOT NULL,
    clasificacion VARCHAR(255) NOT NULL,
    descripcion VARCHAR(1000) NOT NULL
);

CREATE TABLE modificaciones (
    id_modificacion INT(11) AUTO_INCREMENT PRIMARY KEY,
    id_usuario INT(11) NOT NULL,
    id_producto INT(11) NOT NULL,
    fecha_hora DATETIME NOT NULL
);

INSERT INTO usuarios (id_usuario, username, password, admin, permiso)
